<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Band Version"
        android:id="@+id/textView"
        android:layout_row="1"
        android:layout_column="0"
        android:textSize="20dp" />

    <TextView android:text="Version" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BandVer"
        android:textSize="20dp"
        android:layout_below="@+id/BandHR"
        android:layout_gravity="right"
        android:layout_row="1"
        android:layout_column="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Band Firmware"
        android:id="@+id/textView2"
        android:layout_row="2"
        android:layout_column="0"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Firmware"
        android:id="@+id/BandFVer"
        android:textSize="20dp"
        android:layout_below="@+id/BandVer"
        android:layout_gravity="right"
        android:layout_row="2"
        android:layout_column="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Heart Rate"
        android:id="@+id/textView3"
        android:layout_row="3"
        android:layout_column="0"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Rate"
        android:id="@+id/BandHR"
        android:textSize="20dp"
        android:layout_gravity="right"
        android:layout_row="3"
        android:layout_column="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Skin Temperature"
        android:id="@+id/textView4"
        android:layout_row="4"
        android:layout_column="0"
        android:textSize="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skin Temp"
        android:id="@+id/BandTemp"
        android:textSize="20dp"
        android:layout_below="@+id/BandHR"
        android:layout_gravity="right"
        android:layout_row="4"
        android:layout_column="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Accelerometer"
        android:id="@+id/textView5"
        android:layout_row="5"
        android:layout_column="0"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gyroscope"
        android:id="@+id/textView7"
        android:layout_row="6"
        android:layout_column="0"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ"
        android:id="@+id/BandGyro"
        android:layout_gravity="right"
        android:layout_row="6"
        android:layout_column="3"
        android:textIsSelectable="false"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UV Index Level"
        android:id="@+id/textView9"

        android:layout_row="7"
        android:layout_column="0"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ"
        android:id="@+id/BandAccel"
        android:layout_gravity="right"
        android:layout_row="5"
        android:layout_column="3"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UV Reading"
        android:id="@+id/BandUV"
        android:layout_gravity="right"
        android:layout_row="7"
        android:layout_column="3"
        android:textSize="20dp" />
</GridLayout>
